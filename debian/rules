#!/usr/bin/make -f

include /usr/share/dpkg/default.mk

export HOME=$(CURDIR)/fake-home

# debian package version
version=$(shell dpkg-parsechangelog | grep ^Version: | cut -d ' ' -f 2)
# upstream version
gst_version=$(shell echo $(version) | cut -d '-' -f 1)

export DH_VERBOSE = 1
export DEB_BUILD_OPTIONS=nocheck

CFLAGS += -Wno-error
CXXFLAGS += -Wno-error
LDFLAGS += -Wl,-z,defs -Wl,-O1

# Let's decide the package name and url depending on the distribution
DISTRO = "$(shell dpkg-vendor --query vendor)"

GST_PACKAGE_NAME := "GStreamer Bad Plugins (unknown Debian derivative)"
GST_PACKAGE_ORIGIN="https://tracker.debian.org/pkg/gst-plugins-bad1.0"

ifeq ($(DISTRO),"Debian")
GST_PACKAGE_NAME := "GStreamer Bad Plugins (Debian)"
GST_PACKAGE_ORIGIN="https://tracker.debian.org/pkg/gst-plugins-bad1.0"
endif

ifeq ($(DISTRO),"Ubuntu")
GST_PACKAGE_NAME := "GStreamer Bad Plugins (Ubuntu)"
GST_PACKAGE_ORIGIN="https://launchpad.net/ubuntu/+source/gst-plugins-bad1.0"
endif

ifeq ($(shell dpkg-vendor --is Ubuntu && echo yes) $(DEB_HOST_ARCH), yes i386)
NO_I386_ARGS = -Ngstreamer1.0-opencv -Nlibgstreamer-opencv1.0-0

override_dh_builddeb:
	dh_builddeb $(NO_I386_ARGS)

override_dh_gencontrol:
	dh_gencontrol $(NO_I386_ARGS)
endif

conf_flags = -Dpackage-name=$(GST_PACKAGE_NAME) -Dpackage-origin=$(GST_PACKAGE_ORIGIN)
conf_flags += -Dauto_features=enabled -Ddoc=disabled -Dgpl=enabled -Dvulkan=enabled
# Not available in Debian yet
conf_flags += -Dopensles=disabled -Dtinyalsa=disabled -Davtp=disabled -Dfaac=disabled \
	-Dgs=disabled -Diqa=disabled -Disac=disabled -Dmicrodns=disabled -Donnx=disabled -Dsvthevcenc=disabled -Dwpe=disabled
# Only available on Windows
conf_flags += -Ddirectshow=disabled -Dwasapi=disabled -Dwasapi2=disabled -Damfcodec=disabled -Dmagicleap=disabled

ifeq ($(DEB_HOST_ARCH),amd64)
conf_flags += -Dfdkaac=enabled -Dladspa=enabled -Dnvcodec=enabled -Dmsdk=enabled -Dqsv=enabled
endif

ifneq ($(DEB_HOST_ARCH),amd64)
conf_flags += -Dmsdk=disabled -Dqsv=disabled
endif

# Not available on Ubuntu i386 currently
ifeq ($(DEB_HOST_ARCH),i386)
conf_flags += -Ddirectfb=disabled -Dfdkaac=disabled -Dladspa=disabled -Dneon=disabled -Dopenaptx=disabled -Dopenh264=disabled -Dopenni2=disabled -Dqroverlay=disabled -Dopencv=disabled -Dzxing=disabled
endif

%:
	dh $@

override_dh_auto_configure:
	dh_auto_configure -- $(conf_flags)

execute_before_dh_auto_clean:
	rm -rf $(CURDIR)/fake-home

# Only make the tests fail for key architectures
override_dh_auto_test:
ifneq (,$(filter $(DEB_HOST_ARCH), amd64 arm64))
	xvfb-run dh_auto_test
else
	xvfb-run dh_auto_test || true
endif

override_dh_makeshlibs:
	dh_makeshlibs -plibgstreamer-plugins-bad1.0-0 -X "/usr/lib/$(DEB_HOST_MULTIARCH)/gstreamer-1.0" -V 'libgstreamer-plugins-bad1.0-0 (>= $(gst_version))' -- -c4
	dh_makeshlibs -plibgstreamer-opencv1.0-0 -X "/usr/lib/$(DEB_HOST_MULTIARCH)/gstreamer-1.0" -V 'libgstreamer-opencv1.0-0 (>= $(gst_version))' -- -c4

override_dh_install:
	rm -rv $(CURDIR)/debian/tmp/usr/include/gstreamer-1.0/gst/basecamerabinsrc \
		$(CURDIR)/debian/tmp/usr/include/gstreamer-1.0/gst/interfaces/photography* \
		$(CURDIR)/debian/tmp/usr/lib/$(DEB_HOST_MULTIARCH)/libgstbasecamerabinsrc* \
		$(CURDIR)/debian/tmp/usr/lib/$(DEB_HOST_MULTIARCH)/libgstphotography* \
		$(CURDIR)/debian/tmp/usr/lib/$(DEB_HOST_MULTIARCH)/gstreamer-1.0/libgstjpegformat.so \
		$(CURDIR)/debian/tmp/usr/lib/$(DEB_HOST_MULTIARCH)/gstreamer-1.0/libgstcamerabin.so
	#
	mkdir -p $(CURDIR)/debian/gstreamer1.0-opencv/usr/lib/$(DEB_HOST_MULTIARCH)/gstreamer-1.0/ || true
	mv $(CURDIR)/debian/tmp/usr/lib/*/gstreamer-1.0/libgstopencv.so $(CURDIR)/debian/gstreamer1.0-opencv/usr/lib/$(DEB_HOST_MULTIARCH)/gstreamer-1.0/  || true
	#
	mkdir -p $(CURDIR)/debian/libgstreamer-opencv1.0-0/usr/lib/$(DEB_HOST_MULTIARCH)/  || true
	mv $(CURDIR)/debian/tmp/usr/lib/*/libgstopencv-1.0.so.* $(CURDIR)/debian/libgstreamer-opencv1.0-0/usr/lib/$(DEB_HOST_MULTIARCH)/  || true
	#
	mkdir -p $(CURDIR)/debian/gstreamer1.0-plugins-bad-apps/usr/bin/
	mv $(CURDIR)/debian/tmp/usr/bin/gst-transcoder-1.0 $(CURDIR)/debian/gstreamer1.0-plugins-bad-apps/usr/bin/
	#
	mkdir -p $(CURDIR)/debian/gir1.2-gst-plugins-bad-1.0/usr/lib/$(DEB_HOST_MULTIARCH)/
	mv $(CURDIR)/debian/tmp/usr/lib/*/girepository-* $(CURDIR)/debian/gir1.2-gst-plugins-bad-1.0/usr/lib/$(DEB_HOST_MULTIARCH)/
	#
	mkdir -p $(CURDIR)/debian/libgstreamer-plugins-bad1.0-dev/usr/include
	mkdir -p $(CURDIR)/debian/libgstreamer-plugins-bad1.0-dev/usr/lib/$(DEB_HOST_MULTIARCH)/pkgconfig
	mkdir -p $(CURDIR)/debian/libgstreamer-plugins-bad1.0-dev/usr/share/
	mv $(CURDIR)/debian/tmp/usr/include $(CURDIR)/debian/libgstreamer-plugins-bad1.0-dev/usr/
	mv $(CURDIR)/debian/tmp/usr/lib/*/pkgconfig $(CURDIR)/debian/libgstreamer-plugins-bad1.0-dev/usr/$(DEB_HOST_MULTIARCH)/
	mv $(CURDIR)/debian/tmp/usr/lib/*/*.so $(CURDIR)/debian/libgstreamer-plugins-bad1.0-dev/usr/$(DEB_HOST_MULTIARCH)/
	mv $(CURDIR)/debian/tmp/usr/share/gir-* $(CURDIR)/debian/libgstreamer-plugins-bad1.0-dev/usr/share/
	#
	mkdir -p $(CURDIR)/debian/libgstreamer-plugins-bad1.0-0/$(DEB_HOST_MULTIARCH)
	mkdir -p $(CURDIR)/debian/libgstreamer-plugins-bad1.0-0/usr/share/gstreamer-1.0
	mv $(CURDIR)/debian/tmp/usr/lib/*/*.so.* $(CURDIR)/debian/libgstreamer-plugins-bad1.0-0/$(DEB_HOST_MULTIARCH)/
	mv $(CURDIR)/debian/tmp/usr/share/gstreamer-1.0/encoding-profiles $(CURDIR)/debian/libgstreamer-plugins-bad1.0-0/usr/share/gstreamer-1.0/
	#
	mkdir -p $(CURDIR)/debian/gstreamer1.0-plugins-bad/usr/lib/$(DEB_HOST_MULTIARCH)/gstreamer-1.0/
	mkdir -p $(CURDIR)/debian/gstreamer1.0-plugins-bad/usr/share/
	mkdir -p $(CURDIR)/debian/gstreamer1.0-plugins-bad/usr/share/gstreamer-1.0/
	mv $(CURDIR)/debian/tmp/usr/lib/*/gstreamer-1.0/* $(CURDIR)/debian/gstreamer1.0-plugins-bad/usr/share/gstreamer-1.0/
	mv $(CURDIR)/debian/tmp/usr/share/locale $(CURDIR)/debian/gstreamer1.0-plugins-bad/usr/share/
	mv $(CURDIR)/debian/tmp/usr/share/gstreamer-1.0/presets $(CURDIR)/debian/gstreamer1.0-plugins-bad/usr/share/gstreamer-1.0/
	#
	mkdir -p $(CURDIR)/fake-home
	HOME=$(CURDIR)/fake-home \
	LD_LIBRARY_PATH=debian/gstreamer1.0-opencv/usr/lib/$(DEB_HOST_MULTIARCH):\
	debian/gstreamer1.0-plugins-bad-apps/usr/lib/$(DEB_HOST_MULTIARCH):\
	debian/gir1.2-gst-plugins-bad-1.0/usr/lib/$(DEB_HOST_MULTIARCH):\
	debian/libgstreamer-plugins-bad1.0-dev/usr/lib/$(DEB_HOST_MULTIARCH):\
	debian/gstreamer1.0-plugins-bad/usr/lib/$(DEB_HOST_MULTIARCH):\
	debian/libgstreamer-plugins-bad1.0-0/usr/lib/$(DEB_HOST_MULTIARCH):\
	debian/gstreamer1.0-plugins-bad/usr/lib/$(DEB_HOST_MULTIARCH)/gstreamer-1.0/:\
	debian/libgstreamer-opencv1.0-0/usr/lib/$(DEB_HOST_MULTIARCH):$(LD_LIBRARY_PATH) \
	    dh_gstscancodecs
	rm -rf $(CURDIR)/fake-home
override_dh_shlibdeps:
	export LD_LIBRARY_PATH=debian/gstreamer1.0-opencv/usr/lib/$(DEB_HOST_MULTIARCH):\
		debian/gstreamer1.0-plugins-bad-apps/usr/lib/$(DEB_HOST_MULTIARCH):\
		debian/gir1.2-gst-plugins-bad-1.0/usr/lib/$(DEB_HOST_MULTIARCH):\
		debian/libgstreamer-plugins-bad1.0-dev/usr/lib/$(DEB_HOST_MULTIARCH):\
		debian/gstreamer1.0-plugins-bad/usr/lib/$(DEB_HOST_MULTIARCH):\
		debian/libgstreamer-plugins-bad1.0-0/usr/lib/$(DEB_HOST_MULTIARCH):\
		debian/gstreamer1.0-plugins-bad/usr/lib/$(DEB_HOST_MULTIARCH)/gstreamer-1.0/:\
		debian/libgstreamer-opencv1.0-0/usr/lib/$(DEB_HOST_MULTIARCH):$(LD_LIBRARY_PATH)
	dh_shlibdeps -a -ldebian/gstreamer1.0-opencv/usr/lib/$(DEB_HOST_MULTIARCH) -l\
		debian/gstreamer1.0-plugins-bad-apps/usr/lib/$(DEB_HOST_MULTIARCH) -l\
		debian/gir1.2-gst-plugins-bad-1.0/usr/lib/$(DEB_HOST_MULTIARCH) -l\
		debian/libgstreamer-plugins-bad1.0-dev/usr/lib/$(DEB_HOST_MULTIARCH) -l\
		debian/gstreamer1.0-plugins-bad/usr/lib/$(DEB_HOST_MULTIARCH) -l\
		debian/libgstreamer-plugins-bad1.0-0/usr/lib/$(DEB_HOST_MULTIARCH) -l\
		debian/gstreamer1.0-plugins-bad/usr/lib/$(DEB_HOST_MULTIARCH)/gstreamer-1.0/ -l\
		debian/libgstreamer-opencv1.0-0/usr/lib/$(DEB_HOST_MULTIARCH) -l$(LD_LIBRARY_PATH)
override_dh_girepository:
	true

